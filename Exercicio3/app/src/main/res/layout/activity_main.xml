<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.josue.exercicio3.MainActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <EditText
        android:id="@+id/inputX1"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:ems="10"
        android:hint="X"
        android:inputType="number|numberSigned|numberDecimal"
        android:layout_marginStart="16dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/textView8"
        android:layout_marginTop="118dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="118dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/inputX2"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_marginBottom="117dp"
        android:layout_marginEnd="108dp"
        android:layout_marginStart="109dp"
        android:layout_marginTop="117dp"
        android:ems="10"
        android:hint="X"
        android:inputType="number|numberSigned|numberDecimal"
        app:layout_constraintBottom_toTopOf="@+id/res1"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintLeft_toRightOf="@+id/textView2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <EditText
        android:id="@+id/inputY1"
        android:layout_width="46dp"
        android:layout_height="0dp"
        android:layout_marginEnd="83dp"
        android:ems="10"
        android:hint="Y"
        android:inputType="number|numberSigned|numberDecimal"
        app:layout_constraintBottom_toBottomOf="@+id/inputX1"
        app:layout_constraintRight_toRightOf="@+id/btnCalcular"
        app:layout_constraintTop_toTopOf="@+id/inputX1"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <EditText
        android:id="@+id/inputY2"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:ems="10"
        android:hint="Y"
        android:inputType="number|numberSigned|numberDecimal"
        android:layout_marginEnd="16dp"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/inputX2"
        tools:layout_constraintBaseline_creator="1" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Ponto 1"
        android:textSize="30sp"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="35dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ponto 2"
        android:textSize="30sp"
        android:layout_marginStart="1dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/res1"
        android:layout_marginTop="35dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/inputX2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Centro a P1"
        android:textSize="30sp"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="19dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/res1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="18dp"
        android:layout_marginEnd="48dp"
        android:layout_marginRight="48dp"
        android:digits="4"
        android:text="0"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/res2"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintRight_creator="1" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Centro a P2"
        android:textSize="30sp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/res2"
        app:layout_constraintRight_toRightOf="@+id/textView8"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/textView8"
        app:layout_constraintTop_toTopOf="@+id/res2" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Entre P1 e P2"
        android:textSize="30sp"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="22dp"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/res2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="30sp"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/res3"
        app:layout_constraintRight_toRightOf="@+id/res1"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="22dp"
        app:layout_constraintLeft_toLeftOf="@+id/res1" />

    <TextView
        android:id="@+id/res3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="30sp"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="@+id/res2"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="82dp"
        app:layout_constraintLeft_toLeftOf="@+id/res2" />

    <Button
        android:id="@+id/btnCalcular"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calcular"
        android:onClick="calcularClick"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="37dp"
        app:layout_constraintRight_toRightOf="@+id/inputX2"
        android:layout_marginTop="66dp"
        app:layout_constraintTop_toBottomOf="@+id/inputX2"
        android:layout_marginRight="37dp" />

    <Button
        android:id="@+id/subX1"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="45dp"
        android:rotation="180"
        android:text="^"
        android:textSize="24sp"
        android:onClick="subAdd"
        app:layout_constraintLeft_toLeftOf="@+id/addX1"
        app:layout_constraintRight_toRightOf="@+id/addX1"
        app:layout_constraintTop_toBottomOf="@+id/addX1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintHorizontal_bias="0.0" />

    <Button
        android:id="@+id/subY1"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="45dp"
        android:rotation="180"
        android:text="^"
        android:textSize="24sp"
        android:onClick="subAdd"
        app:layout_constraintLeft_toLeftOf="@+id/addY1"
        app:layout_constraintRight_toRightOf="@+id/addY1"
        app:layout_constraintTop_toBottomOf="@+id/addY1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintHorizontal_bias="0.0" />

    <Button
        android:id="@+id/subX2"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="45dp"
        android:rotation="180"
        android:text="^"
        android:textSize="24sp"
        android:onClick="subAdd"
        app:layout_constraintLeft_toLeftOf="@+id/inputX2"
        app:layout_constraintTop_toBottomOf="@+id/addX2"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1"
        android:layout_marginLeft="0dp" />

    <Button
        android:id="@+id/subY2"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="45dp"
        android:rotation="180"
        android:text="^"
        android:textSize="24sp"
        android:onClick="subAdd"
        app:layout_constraintLeft_toLeftOf="@+id/addY2"
        app:layout_constraintRight_toRightOf="@+id/addY2"
        app:layout_constraintTop_toBottomOf="@+id/addY2"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintHorizontal_bias="0.0" />

    <Button
        android:id="@+id/addX1"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:text="^"
        android:textSize="24sp"
        android:onClick="subAdd"
        app:layout_constraintBaseline_toBaselineOf="@+id/addY1"
        app:layout_constraintLeft_toLeftOf="@+id/inputX1"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1" />

    <Button
        android:id="@+id/addY1"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="-1dp"
        android:text="^"
        android:textSize="24sp"
        android:onClick="subAdd"
        app:layout_constraintLeft_toLeftOf="@+id/inputY1"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1"
        android:layout_marginLeft="0dp" />

    <Button
        android:id="@+id/addX2"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="-1dp"
        android:text="^"
        android:textSize="24sp"
        android:onClick="subAdd"
        app:layout_constraintLeft_toLeftOf="@+id/subX2"
        app:layout_constraintRight_toRightOf="@+id/subX2"
        app:layout_constraintTop_toBottomOf="@+id/textView9"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintHorizontal_bias="0.0" />

    <Button
        android:id="@+id/addY2"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:text="^"
        android:textSize="24sp"
        android:onClick="subAdd"
        app:layout_constraintBaseline_toBaselineOf="@+id/addX2"
        app:layout_constraintLeft_toLeftOf="@+id/inputY2"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1" />
</android.support.constraint.ConstraintLayout>
